<h1><%= @article.title %></h1>

<p>
	<%= @article.text%>
</p>


<br/>
<h4> Comments: </h4>

<% @article.comments.each do |com| %>

<p>
	author: <i><u><%= com.author %></u></i>
</p>
<p>
	msg:  <%= com.body %>
</p>
<p>
------------------------------
</p>


<% end %>








<%= form_for([@article, @article.comments.build]) do |f| %>

 	<p> 
		<%= f.label :author %> <br/>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :Msg %> <br/>
		<%= f.text_area :body%>
	</p>
	<p>
		<%= f.submit %>
	</p> 

<% end %>
