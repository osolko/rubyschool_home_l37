<h1> All articles in the blog</h1>


 <% @articles.each do |art| %>

<h2>
	<%= art.title %>
</h2>


<p>
	<%= art.text %>
</p>

<%= link_to 'View', article_path(art) %>
<%= link_to 'Edit', edit_article_path(art) %>

<%= link_to 'Delete', article_path(art), method: :delete, data: {confirm: 'Are you sure?'} %> 



<hr/>

<% end %>